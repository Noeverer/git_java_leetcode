package p5;

import p5.extends_p5_1.Person.Student;
import sun.tools.tree.ThisExpression;

public class extends_p5_1 {
	public static void main(String[] args) {
		Student stu = new Student("liuxiangqian",175,"java");
		stu.study();
		stu.rest();
		
	}
}
	
	
	class Person{
		String name;
		int height;
		String str_height = Double.toString(height);
		public void rest() {
			System.out.println(name + "敲代码累了，休息一会！！！\n" + str_height);
			
		}
	}
		
	class Student extends Person{
		String major;
		public void study(){
			System.out.printf("努力学习%s技术！！！",major);
		   }
		
		public Student(String name,int height,String major) {
			// TODO Auto-generated constructor stub
			this.name = name;
			this.height= height;
			this.major=major;
		}
	}
